.search-bar {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  background-color: #eee;
  font-size: 32rpx;
  color: #999;
  letter-spacing: 4rpx;
}
.book-list {
  background-color: #eee;
}
.book-list .content-head {
  margin: 40rpx;
  height: 40rpx;
}
.book-list .content-head image {
  width: 100%;
  height: 100%;
}
.book-list .content-main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.book-list .content-main .book-item {
  margin-bottom: 64rpx;
}

